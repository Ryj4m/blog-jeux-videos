---
import Base from "../../layouts/Main.astro"

const allPosts = await Astro.glob('./*.md');
---

<Base>
  <h2>Liste des articles</h2>
      <ul>
        {
            allPosts.map((post) => (
                <li class="card">
                    <h3 class="card-h3">{post.frontmatter.title}</h3>
                    <p>{post.frontmatter.description}</p>   
                    <button class="card-button"><a href={`${post.url}/`} target="_blank" class="card-link">En voir plus</a></button>
                </li>
            ))
        }
      </ul>
</Base>

<style>
    a{
        text-decoration: none;
        color: bleu;
    }
    ul{
        padding : 20px;
        list-style-type: none;
    }
</style>